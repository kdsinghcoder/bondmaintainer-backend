                        <li class="sidebar-item">
                            <a class="sidebar-link waves-effect waves-dark sidebar-link" href="../dashboard/addconnections"
                                aria-expanded="false">
                                <i class="fa fa-globe" aria-hidden="true" style="color: rgba(251, 191, 36)"></i>
